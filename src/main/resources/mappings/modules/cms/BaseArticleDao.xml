<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gov.kl.chengguan.modules.cms.dao.BaseArticleDao">
    
	<sql id="cmsArticleColumns">
		a.id AS "id",
		a.category_id AS "category.id",
		a.title AS "title",
		a.description AS "description"
	</sql>
    
	<select id="get" resultType="BaseArticle">
		SELECT 
			<include refid="cmsArticleColumns"/>
		FROM cms_article a
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="BaseArticle">
		SELECT 
			<include refid="cmsArticleColumns"/>
		FROM cms_article a
		<where>
			a.del_flag = #{delFlag}
			<if test="title != null and title != ''">
				AND a.title LIKE 
					<if test="dbName == 'oracle'">'%'||#{title}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{title}+'%'</if>
					<if test="dbName == 'mysql'">CONCAT('%', #{title}, '%')</if>
			</if>
			<if test="category.id != null and category.id != ''">
				AND (a.category_id = #{category.id}
				<if test="category.parentIds != null and category.parentIds != ''">
					or c.parent_ids like 
						<if test="dbName == 'oracle'">'%'||#{category.id}||'%'</if>
						<if test="dbName == 'mssql'">'%,'+#{category.id}+',%'</if>
						<if test="dbName == 'mysql'">CONCAT('%,', #{category.id}, ',%')</if>
				</if>)
			</if>
			<!-- ${sqlMap.dsf}-->
		</where>
	</select>
	
	<select id="findAllList" resultType="BaseArticle">
		SELECT 
			<include refid="cmsArticleColumns"/>
		FROM cms_article a	
	</select>
	
	
	
	<select id="findByIdIn" resultType="BaseArticle">
		SELECT 
			<include refid="cmsArticleColumns"/>
		from cms_article a where 
		<where>
			id in (${id});
		</where>		
	</select>
</mapper>